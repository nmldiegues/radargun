<bench-config>

   <master
         bindAddress="${127.0.0.1:master.address}"
         port="${21031:master.port}"/>

   <benchmark
         initSize="${10:Islaves}"
         maxSize="${10:slaves}"
         increment="1">

      <DestroyWrapper
            runOnAllSlaves="true"/>

      <StartCluster
            staggerSlaveStartup="true"
            delayAfterFirstSlaveStarts="5000"
            delayBetweenStartingSlaves = "1000"/>

      <ClusterValidation
            partialReplication="true"/>

      <Warmup
            numWarehouses="1"
            light="false"
            threadParallelLoad="true" 
            batchLevel="150" 
            numOfThreads="2"/>

      <CacheSize
            statName="CACHE_SIZE_BEFORE_BENCH"/>

      <WebSessionBenchmark
            numOfThreads="4"
            perThreadSimulTime="30000000000"
            lambda="0.0"
            paymentWeight="5.0"
            orderStatusWeight="50.0"
            cLastMask="0"
            olIdMask="0"
            cIdMask="0"
            overlap="0.0"
            forceGlobalWrite="false"/>
      
      <CacheSize
            statName="CACHE_SIZE_AFTER_BENCH"/>

      <CsvReportGeneration/>
   </benchmark>

   <products>
      <infinispan4>
         <config name="ispn.xml"/>
      </infinispan4>
   </products>

   <reports />
</bench-config>
